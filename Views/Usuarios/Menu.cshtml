@model Usuario

@{
    ViewData["Title"] = "Menu Principal";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .login-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .login-container h2 {
            color: #2c3e50;
            margin-bottom: 20px;
        }

    .list-content {
        list-style-type: none;
        padding: 0;
        margin: 20px 0;
    }

    .list-element {
        margin: 10px 0;
    }

    .list-link,
    .consig-link,
    .back-link {
        display: block;
        background-color: #3498db;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .consig-link {
        background-color: #2ecc71;
    }

        .list-link:hover,
        .consig-link:hover,
        .back-link:hover {
            background-color: #2980b9;
        }

        .consig-link:hover {
            background-color: #27ae60;
        }

    .back-link {
        background-color: #e74c3c;
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin-top: 20px;
        cursor: pointer;
        border-radius: 4px;
    }

        .back-link:hover {
            background-color: #c0392b;
        }
</style>

<div class="login-container">
    <h2>Bienvenido</h2>

    <ul class="list-content">
        <li class="list-element"><a class="list-link" asp-action="ConsultarSaldo" asp-route-id="@Model.IdUsuario">Consultar Saldo</a></li>
        <li class="list-element"><a class="list-link" asp-action="Retirar" asp-route-id="@Model.IdUsuario">Retirar</a></li>
        <li class="list-element"><a class="consig-link" asp-action="Consignar" asp-route-id="@Model.IdUsuario">Consignar</a></li>
        <li class="list-element"><a class="list-link" asp-action="ConsultarMovimientos" asp-route-id="@Model.IdUsuario">Consultar Movimientos</a></li>
    </ul>

    <form asp-action="CerrarSesion" method="post">
        <button type="submit" class="back-link">Cerrar Sesión</button>
    </form>
</div>



